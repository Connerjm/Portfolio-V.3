<div class="column is-one-third">
    <div class="card">
        <div class="card-image">
            <figure class="image is-16by9">
                <img src="{{openGraphImageUrl}}" alt="A small screenshot of the assosiated project.">
            </figure>
            <div class="card-content">
                <div class="content">
                    <h4 class="title is-4">{{name}}</h4>
                    {{description}}
                </div>
            </div>
            <footer class="card-footer">
                <a href="{{url}}" target="_blank" class="card-footer-item">Repo</a>
                {{#if deployment}}
                <a href="{{deployment}}" target="_blank" class="card-footer-item">Deployment</a>
                {{else}}
                <p class="card-footer-item">N/A</p>
                {{/if}}
            </footer>
        </div>
    </div>
</div>